import random

def guess():
    num1 = random.randint(0, 20)
    numtent1 = 0
    
    print("\n--- Bem-vindo ao Jogo do N√∫mero Misterioso ! ---")
    print("Tens 5 tentativas para adivinhar o n√∫mero entre 0 e 20.")

    while numtent1 < 3:
        try:
            numeroUti = int(input("\nIntroduz um n√∫mero entre 0 e 20: "))
        except ValueError:
            print("Por favor, insira um n√∫mero v√°lido.")
            continue

        if numeroUti < 0 or numeroUti > 20:
            print("N√∫mero fora do intervalo permitido (0 a 20). Tenta outra vez.")
            continue
        
        numtent1 += 1
        
        if numeroUti == num1:
            print("\nüéâ Parab√©ns, ganhaste o jogo! üéâ")
            break
        elif numeroUti > num1:
            print(f"O n√∫mero {numeroUti} est√° acima do n√∫mero escondido.")
        else:
            print(f"O n√∫mero {numeroUti} est√° abaixo do n√∫mero escondido.")

        if numtent1 == 5:
            print("\n N√£o tens mais tentativas. O n√∫mero era:", num1)

    print("\n--- Fim do jogo ---\n")

def menu():
    while True:
        print("\n========== MENU ==========")
        print("1 - Jogar")
        print("2 - Sair")
        
        opcao = input("Escolhe uma op√ß√£o: ")

        if opcao == "1":
            guess()
        elif opcao == "2":
            print("\nObrigado por jogar! At√© √† pr√≥xima. üëã")
            break
        else:
            print("Op√ß√£o inv√°lida. Tenta novamente.")

if __name__ == "__main__":
    menu()